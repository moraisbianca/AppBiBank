<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Home"
             Background="#993399"
            >

    <ContentPage.Content>
        <StackLayout Margin="0, 25, 0, 0"  BackgroundColor="#f2f3f7">

            <StackLayout Orientation="Horizontal" BackgroundColor="Transparent">
                <Label Text="bibank" Style="{StaticResource FonteLogo}"
                       FontSize="27"
                       Margin="30,30,160,20"
                       HorizontalOptions="Start"
                       TextColor="#993399"
                   />
                <ImageButton x:Name="btn_menu" 
                         BackgroundColor="Transparent"
                         Margin="0,17,0,0"
                         HorizontalOptions="End"
                         Clicked="btn_menu_Clicked"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Margin="0,0,0,0">
                <Label x:Name="txt_correntista"
                           FontAttributes="Bold"
                           FontFamily="Century Gothic"
                           Margin="30,0,20,20"
                           TextColor="black"/>

                <Label x:Name="txt_saldo"
                           Text="R$ 0,00" 
                           FontAttributes="Bold"
                           FontFamily="Century Gothic"
                           Margin="30,0,20,20"
                           TextColor="black"/>

                <ImageButton x:Name="btn_saldo"
                             WidthRequest="20"
                             Margin="-15,-19,0,0"
                             BackgroundColor="Transparent" 
                             Clicked="ver_saldo"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Margin="15,30,15,0">

                <Frame Grid.Column="1" Grid.Row="0" Style="{StaticResource BotaoHome}"
                       HasShadow="True">
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <ImageButton x:Name="btn_extrato" 
                                     Clicked="btn_extrato_Clicked"
                                     BackgroundColor="Transparent"
                                     WidthRequest="35"
                                     Margin="5"/>
                        
                        <Label Text="EXTRATO"
                               HorizontalOptions="Center"
                               FontSize="9"
                               Style="{StaticResource LabelBotaoHome}"/>
                    </StackLayout>
                </Frame>
                

                <Frame Grid.Column="2" Grid.Row="0" Style="{StaticResource BotaoHome}"
                       HasShadow="True">
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <ImageButton x:Name="btn_transferencias" 
                                     Clicked="btn_transferencias_Clicked"
                                     BackgroundColor="Transparent"
                                     WidthRequest="30"
                                     Margin="5"/>
                        
                        <Label Text="TRANSFERÊNCIAS"
                               HorizontalOptions="Center"
                               FontSize="9"
                               Style="{StaticResource LabelBotaoHome}"/>
                    </StackLayout>
                </Frame>

                
                <Frame Grid.Column="3" Grid.Row="0" Style="{StaticResource BotaoHome}"
                       HasShadow="True">
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <ImageButton x:Name="btn_pix" 
                                     Clicked="btn_pix_Clicked"
                                     BackgroundColor="Transparent"
                                     WidthRequest="28"
                                     Margin="5"/>
                        
                        <Label Text="PIX"
                               HorizontalOptions="Center"
                               FontSize="9"
                               Style="{StaticResource LabelBotaoHome}"/>
                    </StackLayout>
                </Frame>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>